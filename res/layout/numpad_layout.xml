<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:orientation="vertical">
        <ImageButton android:layout_width="fill_parent" android:layout_height="fill_parent"
                     android:id="@+id/btnDelete"
                     android:layout_weight="1"
                android:src="@android:drawable/ic_input_delete"/>
        <!--<Button android:layout_width="fill_parent" android:layout_height="fill_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:id="@+id/btnDelete"-->
                <!--android:text="dlt"/>-->
        <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/btnClear"
                android:text="C"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnOne"
                    android:text="1"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnTwo"
                    android:text="2"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnThree"
                    android:text="3"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnFour"
                    android:text="4"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnFive"
                    android:text="5"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnSix"
                    android:text="6"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnSeven"
                    android:text="7"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnEight"
                    android:text="8"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnNine"
                    android:text="9"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:orientation="vertical">
        <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/btnHint"
                android:text="Hint"/>
        <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/btnSolve"
                android:text="slv"/>

    </LinearLayout>
</LinearLayout>
